{
  "provider": {
    "helm": {
      "kubernetes": {
        "host": "${module.eks.eks_cluster_endpoint}",
        "cluster_ca_certificate": "${ base64decode(module.eks.eks_cluster_ca_cert) }",
        "exec": {
          "api_version": "client.authentication.k8s.io/v1beta1",
          "args": [
            "eks",
            "get-token",
            "--cluster-name",
            "${module.eks.cluster_name}"
          ],
          "command": "aws"
        }
      }
    }
  }
}
